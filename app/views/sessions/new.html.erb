<div class="parallax first-section" data-stellar-background-ratio="0.5" style="background-image:url('/assets/gift-saves-main-background');">
    <div class="container">
        <div class="section-title text-center">
            <h1>Login</h1>
        </div><!-- end title -->
    </div><!-- end container -->
</div><!-- end section -->

<div class="section wb">
    <div class="container">
        <div class="row">
            <div class="sidebar col-md-6 col-md-offset-3">
                <div class="widget clearfix">
                  <div class="widget-title">
                      <h4><span>Sig-in Form</span></h4>
                  </div>
                  <!-- end widget-title -->

                  <p>Welcome to Gift Saves.</p>

                  <hr class="invis3">
                  <%= form_for(:session, url: "/sessions/#{@next}", html: { class: "contact-form newsletter" }) do |f| %>
                    <% if flash[:error] %>
                      <ul class="list-group">
                        <li class="list-group-item list-group-item-danger"><%= flash[:error] %></li>
                      </ul>
                    <% end %>
                    <% if flash[:notice] %>
                      <ul class="list-group">
                        <li class="list-group-item list-group-item-success"><%= flash[:notice] %></li>
                      </ul>
                    <% end %>
                      <div class="row">
                          <div class="col-md-12">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: "form-control" %>
                          </div>
                          <div class="col-md-12">
                            <%= f.label :password %>
                            <%= f.password_field :password, class: "form-control" %>
                          </div>
                          <div class="col-md-6 col-sm-12">
                            <p><%= link_to "Forgot Your Password?", "#", class: "text-theme-colored font-weight-600 font-12", data: {toggle: "modal", target: "#forgort-password-modal"} %></p>
                          </div>
                          <div class="col-md-12 col-sm-12">
                            <%= f.submit :login, class: "btn btn-primary pull-right" %>
                          </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-md-12">
                          <a href="#" class="fb-button btn btn-primary pull-left"><i class="fa fa-facebook"></i> <span class="hidden-xs">Login with Facebook</span></a>
                          <a href="#" class="gp-button btn btn-primary pull-right"><i class="fa fa-google-plus"></i> <span class="hidden-xs">Login with Google+</span></a>
                        </div>
                      </div>
                    <% end %>
                </div><!-- end post-wrapper -->
            </div><!-- end content -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

<!-- Modal -->
<div class="modal fade" id="forgort-password-modal" tabindex="-1" role="dialog" aria-labelledby="requestNewPasswordModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="requestNewPasswordModal">Request new password</h4>
      </div>
      <%= form_for(:reset_password, url: "/users/passwords/reset", remote: true, html: { class: "clearfix" }) do |f| %>
        <div class="modal-body">
          <div class="row">
            <div class="form-group col-md-12">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your registered email", required: true %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button "Close", class: "btn btn-default", data: {dismiss: "modal"} %>
          <%= f.button "Send", class: "btn btn-pfw btn-fla", type: "submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>