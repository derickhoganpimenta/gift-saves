<div class="parallax first-section" data-stellar-background-ratio="0.5" style="background-image:url('/assets/gift-saves-main-background');">
  <div class="container">
    <div class="section-title m30 text-center">
      <h1>User Dashboard</h1>
    </div><!-- end title -->
  </div><!-- end container -->
</div><!-- end section -->
<div class="section wb">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if flash[:notice] %>
          <ul class="list-group">
            <li class="list-group-item list-group-item-success"><%= flash[:notice] %></li>
          </ul>
        <% end %>
      </div>
      <%= render partial: "donors_dashboards/sidebar_menu" %>
      <div class="sidebar col-md-8">
        <div class="post-wrapper mb20 clearfix">
            <div class="widget-title">
                <h4><span>New Card</span></h4>
            </div>
            <div class="comment-form newsletter">
                <p>Your email is safe with us and we hate spam as much as you do.</p>

                <%= form_for(:card, url: cards_create_path, html: { class: "clearfix" }) do |f| %>
                  <% if flash[:error] %>
                    <ul class="list-group">
                      <li class="list-group-item list-group-item-danger"><%= flash[:error] %></li>
                    </ul>
                  <% end %>
                  <% if flash[:notice] %>
                    <ul class="list-group">
                      <li class="list-group-item list-group-item-success"><%= flash[:notice] %></li>
                    </ul>
                  <% end %>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <div class="input-group">
                          <%= f.label :card_holder_name %>
                          <%= f.text_field :card_holder_name, class: "form-control", required: true %>

                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <div class="input-group">
                          <%= f.label :card_number %>
                          <%= f.phone_field :card_number, class: "form-control credit-card-number", required: true %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <div class="input-group">
                          <%= f.label :cvc %>
                          <%= f.phone_field :card_verification_code, class: "form-control", required: true %>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <div class="input-group">
                          <%= f.label "MM/YY" %>
                          <%= f.phone_field :card_expiration, class: "form-control credit-card-expiration", required: true %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group pull-right mt-15">
                    <%= f.submit :"Add Payment Method", class: "btn btn-primary" %>
                  </div>
                <% end %>
            </div>
        </div><!-- end widget -->
      </div><!-- end content -->
    </div><!-- end row -->
  </div>
</div>
