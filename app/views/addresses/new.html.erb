<div class="parallax first-section" data-stellar-background-ratio="0.5" style="background-image:url('/assets/gift-saves-main-background');">
  <div class="container">
    <div class="section-title m30 text-center">
      <h1>User Dashboard</h1>
    </div><!-- end title -->
  </div><!-- end container -->
</div><!-- end section -->
<div class="section wb">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if flash[:notice] %>
          <ul class="list-group">
            <li class="list-group-item list-group-item-success"><%= flash[:notice] %></li>
          </ul>
        <% end %>
      </div>
      <%= render partial: "donors_dashboards/sidebar_menu" %>
      <div class="sidebar col-md-8">
        <div class="post-wrapper mb20 clearfix">
            <div class="widget-title">
                <h4><span>Addresses</span></h4>
            </div>
            <div class="comment-form newsletter">
                <p>Your email is safe with us and we hate spam as much as you do.</p>
                <%= form_for @address, url: "#{addresses_create_path}#{@next}", html: { class: "mt-30" } do |f| %>
                <% if flash[:error] %>
                  <ul class="list-group">
                    <li class="list-group-item list-group-item-danger"><%= flash[:error] %></li>
                  </ul>
                <% end %>
                <% if flash[:notice] %>
                  <ul class="list-group">
                    <li class="list-group-item list-group-item-success"><%= flash[:notice] %></li>
                  </ul>
                <% end %>
                <% if @address.errors.full_messages.any? %>asdsa
                  <ul class="list-group">
                    <% @address.errors.full_messages.each do |msg| %>
                      <li class="list-group-item list-group-item-danger"><%= msg %></li>
                    <% end %>
                  </ul>
                <% end %>
                <div class="row">
                  <div class="col-sm-4">
                    <div class="form-group mb-10">
                      <%= f.select :type_cd, Address.type_cds.map { |key, value| [key.humanize, key] }, {include_blank: false}, {class: "form-control"} %>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group mb-10">
                      <%= f.text_field :zip_code, class: "form-control", placeholder: :zip_code, aria: {required: true} %>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group mb-10">
                      <%= f.select :country, Address.countries.map { |key, value| [key[:name].humanize, key[:code]] }, {include_blank: false}, {class: "form-control"} %>
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <div class="form-group mb-10">
                      <%= f.text_field :street_address, class: "form-control", placeholder: :street_address, aria: {required: true} %>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group mb-10">
                      <%= f.text_field :city, class: "form-control", placeholder: :city, aria: {required: true} %>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group mb-10">
                      <%= f.text_field :state, class: "form-control", placeholder: :state, aria: {required: true}, maxlength: 2 %>
                    </div>
                  </div>
                </div>
                <div class="form-group mb-0 mt-20">
                  <%= f.button "Create", class: "btn btn-primary", data: {loading_text: "Please wait..."} %>
                </div>
              <% end %>
            </div>
        </div><!-- end widget -->
      </div><!-- end content -->
    </div><!-- end row -->
  </div>
</div>
